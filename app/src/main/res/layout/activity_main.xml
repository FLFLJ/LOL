<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/blueEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入蓝方英雄"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/redEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入红方英雄，用逗号分隔"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/banEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入禁用英雄，用逗号分隔"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GET THE BP"
        android:layout_gravity="center"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/matchHerosTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/counterHerosTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="fill_horizontal"
        android:layout_gravity="fill_horizontal">
        <TextView
            android:id="@+id/blueTextView"
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            />
        <TextView
        android:id="@+id/redTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        />
    </LinearLayout>




</LinearLayout>